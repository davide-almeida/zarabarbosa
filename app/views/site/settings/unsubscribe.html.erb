    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="servicesTitle">
                    <div class="cell-view">
                        <h1 class="h1 light as">Emails</h1>
                        <div class="breadCrumbs small">
                            <%= link_to 'Início', root_path %> <i class="fa fa-angle-right"></i> <span>emails</span> <i class="fa fa-angle-right"></i> <span>Cancelamento de inscrição</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
