					</div>
				</div>
			</div>
		</div>
	<% end %>
	<!-- venda (secondbutton) - FIM -->

	<!-- Testimonials -->
	<% unless @courses.testimonials.blank? %>
		<section class="testimonial">
			<div class="container">
				<div id="tcb-testimonial-carousel" class="carousel slide" data-ride="carousel">
					<h3>Depoimentos</h3>
					<!-- Indicators -->
					<ol class="carousel-indicators">
						<% (0..(@courses.testimonials.count)-1).each do |i, index| %>
							<li data-target="#tcb-testimonial-carousel" data-slide-to="<%= i %>" class="<%= "active" if index == 0 %> "></li>
						<% end %>
					</ol>
					<!-- Wrapper for slides -->
					<div class="carousel-inner">
						<% @courses.testimonials.each_with_index do |testimonial, index| %>
							<div class="item <%= "active" if index == 0 %> "> <!-- active -->
								<div class="row">
									<div class="col-xs-12">
										<figure class="clearfix">
											<div class="col-md-12 col-sm-12 col-xs-12">
												<div class="caption">
													<div class="testimonials-icon center"><%=image_tag("img/homepage3/testicon.png", alt: "", class: "center")%></div>
													<p><%= testimonial.body.html_safe %></p>
													<h5>- <%= testimonial.name.html_safe %></h5>
												</div>
											</div>
										</figure>
									</div>
								</div>
							</div>
						<% end %>
					</div>
					<!-- Controls -->
					<a class="left carousel-control" href="#tcb-testimonial-carousel" data-slide="prev"> </a>
					<a class="right carousel-control" href="#tcb-testimonial-carousel" data-slide="next">  </a>
				</div>
			</div>
		</section>
	<% end %>
