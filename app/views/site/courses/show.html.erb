					<div class="col-xs-12 col-sm-12 col-md-12">
						<div class="btnAlign">
							<%= link_to @courses.link_sale, class: "btn btn--outline btn--large btn--1493941431965", target: '_blank' do %> <%= @courses.secondbutton.html_safe %> <% end %>
