<h1 class="page-header">Blog - Post</h1>
<% if @post.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <!-- message -->
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

  </div>
<% end %>
<div class="panel panel-default" >
    <div class="panel-heading">
        <%= action %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="col-lg-6">
            <%= form_for([:backoffice, @post]) do |f| %>
            <div class="form-group">
                <label>Título</label>
                <%= f.text_field :title, class:"form-control", placeholder:"Título do Post" %>
            </div>
            <div class="form-group">
                <label>Texto</label>
                <%= f.text_area :body, class:"form-control tinymce", placeholder:"Texto" %>
            </div>
            <div class="form-group">
                <label>Data</label>
                <%= f.text_field :post_date, class: "form-control", id: "datepicker1", value: l(@post.post_date) %>
            </div>
            <div class="form-group">
                <label>Categoria</label>
                <%= f.collection_select(:category_id, @category_options_for_select, :id, :name, {}, {:class =>"form-control"}) %>
            </div>
            <div class="form-group">
                <label>Imagem (840px x 360px)</label>
                <%= f.file_field :picture, class:"form-control", placeholder:"Imagem" %>
            </div>
            <%= f.hidden_field :admin_id, :value => current_admin.id %>
            <button type="submit" class="btn btn-default">Cadastrar</button>
            <% end %>
        </div>
    </div>
    <!-- /.panel-body -->
</div>
<!-- /panel panel-default -->
