<h1 class="page-header">Storage</h1>
<% if @site_storage.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <!-- message -->
    <ul>
      <% @site_storage.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

  </div>
<% end %>
<div class="panel panel-default" >
    <div class="panel-heading">
        Novo cadastro
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="col-lg-6">
            <%= form_for([:backoffice, @site_storage]) do |f| %>
            <div class="form-group">
                <label>Nome</label>
                <%= f.text_field :name, class:"form-control", required:"required", placeholder:"Nome" %>
            </div>
            <div class="form-group">
                <label>Descrição</label>
                <%= f.text_area :description, class:"form-control tinymce", placeholder:"Descrição" %>
            </div>
            <div class="form-group">
                <label>Arquivo</label>
                <%= f.file_field :annex, class:"form-control", required:"required", placeholder:"Arquivo" %>
            </div>

            <button type="submit" class="btn btn-default">Cadastrar</button>
            <% end %>
        </div>
    </div>
    <!-- /.panel-body -->
</div>
<!-- /panel panel-default -->
