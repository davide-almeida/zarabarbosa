<h1 class="page-header">Experiências - Atuações Profissionais</h1>
<% if @work.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <!-- message -->
    <ul>
      <% @work.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

  </div>
<% end %>
<div class="panel panel-default" >
    <div class="panel-heading">
        <%= action %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="col-lg-6">
            <%= form_for([:backoffice, @work]) do |f| %>
            <div class="form-group">
                <label>Empresa(local)</label>
                <%= f.text_field :company, class:"form-control", placeholder:"Nome do Local" %>
            </div>
            <div class="form-group">
                <label>Cargo</label>
                <%= f.text_field :role, class:"form-control", placeholder:"Cargo" %>
            </div>
            <button type="submit" class="btn btn-default">Cadastrar</button>
            <% end %>
        </div>
    </div>
    <!-- /.panel-body -->
</div>
<!-- /panel panel-default -->
