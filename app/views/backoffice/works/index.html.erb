<h1 class="page-header">Experiências - Atuações Profissionais</h1>
<div class="panel panel-default" >
    <div class="panel-heading">
        Listando Atuações Profissionais <span class="badge badge-light"><%= @contador.count %></span>
        <%= link_to new_backoffice_work_path, class: "btn btn-success pull-right", style: "margin-top: -5px" do %>
            Novo Cadastro
        <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Empresa(Local)</th>
                        <th>Cargo</th>
                        <th colspan="2">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    <% @works.each do |work| %>
                        <tr>
                            <td width="3%"><%= work.id %></td>
                            <td><%= work.company %></td>
                            <td><%= work.role %></td>
                            <td width="3%">
                                <%= link_to edit_backoffice_work_path(work.id), class: "btn btn-primary btn-circle" do %>
                                    <i class="fa fa-edit"></i>
                                <% end %>
                            </td>
                            <td width="3%">
                                <%= link_to backoffice_work_path(work.id), class: "btn btn-danger btn-circle", data: {confirm: "Você realmente deseja excluir (#{work.company})?"}, method: :delete do  %>
                                    <i class="fa fa-trash"></i>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
        </p> <center><%= paginate @works %></center>
    </div>
    <!-- /.panel-body -->
</div>

