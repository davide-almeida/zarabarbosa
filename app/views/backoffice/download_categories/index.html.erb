<h1 class="page-header">Downloads - Categorias</h1>
<div class="panel panel-default" >
    <div class="panel-heading">
        Listando Categorias de downloads <span class="badge badge-light"><%= @download_categories_count %></span>
        <%= link_to new_backoffice_download_category_path, class: "btn btn-success pull-right", style: "margin-top: -5px" do %>
            Novo Cadastro
        <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome</th>
                        <th>Qnt. downloads</th>
                        <th colspan="2">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    <% @download_categories.each do |category| %>
                        <tr>
                            <td width="3%"><%= category.id %></td>
                            <td><%= category.name %></td>
                            <td><%= category.downloads.count %></td>
                            <td width="3%">
                                <%= link_to edit_backoffice_download_category_path(category.id), class: "btn btn-primary btn-circle" do %>
                                    <i class="fa fa-edit"></i>
                                <% end %>
                            </td>
                            <td width="3%">
                                <%= link_to backoffice_download_category_path(category.id), class: "btn btn-danger btn-circle", data: {confirm: "Você realmente deseja excluir a categoria (#{category.name})? Ela possui #{category.downloads.count} downloads vinculados."}, method: :delete do  %>
                                    <i class="fa fa-trash"></i>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
        </p> <center><%= paginate @download_categories %></center>
    </div>
    <!-- /.panel-body -->
</div>

