<h1 class="page-header">Dados Profissionais</h1>
<div class="panel panel-default" >
    <div class="panel-heading">
        Listando Dados Profissionais <span class="badge badge-light"><%= @contador.count %></span>
        <%= link_to new_backoffice_professional_path, class: "btn btn-success pull-right", style: "margin-top: -5px" do %>
            Novo Cadastro
        <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome</th>
                        <th>Título</th>
                        <th>CRP</th>
                        <th>Descrição</th>
                        <th>Telefone</th>
                        <th>Imagem</th>
                        <th colspan="2">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    <% @professionals.each do |professional| %>
                        <tr>
                            <td width="3%"><%= professional.id %></td>
                            <td><%= professional.name %></td>
                            <td><%= professional.title %></td>
                            <td><%= professional.number %></td>
                            <td><%= professional.description %></td>
                            <td><%= professional.phone %></td>
                            <td><%= image_tag professional.picture.url(:thumb) %></td>
                            <td width="3%">
                                <%= link_to edit_backoffice_professional_path(professional.id), class: "btn btn-primary btn-circle" do %>
                                    <i class="fa fa-edit"></i>
                                <% end %>
                            </td>
                            <td width="3%">
                                <%= link_to backoffice_professional_path(professional.id), class: "btn btn-danger btn-circle", data: {confirm: "Você realmente deseja excluir (#{professional.name})?"}, method: :delete do  %>
                                    <i class="fa fa-trash"></i>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
        </p> <center><%= paginate @professionals %></center>
    </div>
    <!-- /.panel-body -->
</div>

