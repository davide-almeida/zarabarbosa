<h1 class="page-header">Downloads - Páginas</h1>
<% if @download.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <!-- message -->
    <ul>
      <% @download.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

  </div>
<% end %>
<div class="panel panel-default" >
    <div class="panel-heading">
        Editar cadastro
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="col-lg-6">
            <%= form_for([:backoffice, @download]) do |f| %>
            <div class="form-group">
                <label>Status</label>
                <%= f.select(:is_active, @active_options_for_select, {}, {:class =>"form-control", :tabindex => "-1"}) %>
            </div>
            <div class="form-group">
                <label>Ordem de exibição</label>
                <%= f.number_field :order_download, class:"form-control", placeholder:"Ex.: 1" %>
            </div>
            <div class="form-group">
                <label>Categoria</label>
                <%= f.collection_select(:download_category_id, @download_category_options_for_select, :id, :name, {}, {:class =>"form-control"}) %>
            </div>
            <div class="form-group">
                <label>Título</label>
                <%= f.text_field :title, class:"form-control", placeholder:"Título do download" %>
            </div>
            <div class="form-group">
                <label>Descrição</label>
                <%= f.text_area :description, class:"form-control tinymce", placeholder:"Descrição" %>
            </div>
            <div class="form-group">
                <label>Imagem (1280px x 720px OU com a mesma proporção)</label>
                <% if @download.picture.present? %>
                    <div class="form-group">
                        <%= image_tag @download.picture.url(:thumb) %>
                    </div>
                <% end %>
                <%= f.file_field :picture, class:"form-control", placeholder:"Imagem." %>
            </div>
            <div class="form-group">
                <label>Link (Mailchimp)</label>
                <%= f.text_field :lead_frame, class:"form-control", placeholder:"link do mailchimp" %>
            </div>
            <div class="form-group">
                <label>Nome botão (Mailchimp)</label>
                <%= f.text_field :first_button, class:"form-control", placeholder:"Ex.: Baixar agora!" %>
            </div>

            <button type="submit" class="btn btn-default">Cadastrar</button>
            <% end %>
        </div>
    </div>
    <!-- /.panel-body -->
</div>
<!-- /panel panel-default -->
