<h1 class="page-header">Experiência - Projetos & Atividades Desenvolvidas</h1>
<% if @project.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <!-- message -->
    <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

  </div>
<% end %>
<div class="panel panel-default" >
    <div class="panel-heading">
        <%= action %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="col-lg-6">
            <%= form_for([:backoffice, @project]) do |f| %>
            <div class="form-group">
                <label>Descrição</label>
                <%= f.text_area :description, class:"form-control tinymce", placeholder:"Texto..." %>
                <p class="help-block"><i>Obs.: Apenas o último cadastro será exibido no site.</i></p>
            </div>
            <button type="submit" class="btn btn-default">Cadastrar</button>
            <% end %>
        </div>
    </div>
    <!-- /.panel-body -->
    
</div>
<!-- /panel panel-default -->
