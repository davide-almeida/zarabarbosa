<h1 class="page-header">Experiência - Projetos & Atividades Desenvolvidas</h1>
<div class="panel panel-default" >
    <div class="panel-heading">
        Listando Projetos & Atividades Desenvolvidas <span class="badge badge-light"><%= @contador.count %></span>
        <%= link_to new_backoffice_project_path, class: "btn btn-success pull-right", style: "margin-top: -5px" do %>
            Novo Cadastro
        <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Descrição</th>
                        <th colspan="2">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    <% @projects.each do |project| %>
                        <tr>
                            <td width="3%"><%= project.id %></td>
                            <td><%= project.description.html_safe %></td>
                            <td width="3%">
                                <%= link_to edit_backoffice_project_path(project.id), class: "btn btn-primary btn-circle" do %>
                                    <i class="fa fa-edit"></i>
                                <% end %>
                            </td>
                            <td width="3%">
                                <%= link_to backoffice_project_path(project.id), class: "btn btn-danger btn-circle", data: {confirm: "Você realmente deseja excluir (#{project.description})?"}, method: :delete do  %>
                                    <i class="fa fa-trash"></i>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <p class="help-block"><i>Obs.: Apenas o último cadastro será exibido no site.</i></p>
        </div>
        <!-- /.table-responsive -->
        </p> <center><%= paginate @projects %></center>
    </div>
    <!-- /.panel-body -->
</div>

