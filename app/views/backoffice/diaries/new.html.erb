<h1 class="page-header">Endereços & Horários de Atendimentos</h1>
<% if @diary.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <!-- message -->
    <ul>
      <% @diary.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

  </div>
<% end %>
<div class="panel panel-default" >
    <div class="panel-heading">
        Novo Cadastro
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="col-lg-6">
            <%= form_for([:backoffice, @diary]) do |f| %>
            <div class="form-group">
                <label>Nome</label>
                <%= f.text_field :name, class:"form-control", placeholder:"Nome do Local" %>
            </div>
            <div class="form-group">
                <label>Endereço</label>
                <%= f.text_field :address, class:"form-control", placeholder:"Ex.: Rua exemplo, N° 03" %>
            </div>
            <div class="form-group">
                <label>Telefone</label>
                <%= f.text_field :phone, class:"form-control" %>
            </div>
            <div class="form-group">
                <label>Dias</label>
                <%= f.text_field :week, class:"form-control", placeholder:"Ex.: Segunda a Sexta-feira" %>
            </div>
            <div class="form-group">
                <label>Hora Inicial</label>
                <%= f.text_field :start_time, class:"form-control", placeholder:"Ex.: 14:30" %>
            </div>
            <div class="form-group">
                <label>Hora Final</label>
                <%= f.text_field :end_time, class:"form-control", placeholder:"Ex.: 17:30" %>
            </div>
            <button type="submit" class="btn btn-default">Cadastrar</button>
            <% end %>
        </div>
    </div>
    <!-- /.panel-body -->
</div>
<!-- /panel panel-default -->
