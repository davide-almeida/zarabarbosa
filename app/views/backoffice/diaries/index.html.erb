<h1 class="page-header">Endereços & Horários de Atendimentos</h1>
<div class="panel panel-default" >
    <div class="panel-heading">
        Listando Endereços & Horários de Atendimentos <span class="badge badge-light"><%= @contador.count %></span>
        <%= link_to new_backoffice_diary_path, class: "btn btn-success pull-right", style: "margin-top: -5px" do %>
            Novo Cadastro
        <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome</th>
                        <th>Endereço</th>
                        <th>Telefone</th>
                        <th>Dias</th>
                        <th>Hora Inicial</th>
                        <th>Hora Final</th>
                        <th colspan="2">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    <% @diaries.each do |diary| %>
                        <tr>
                            <td width="3%"><%= diary.id %></td>
                            <td><%= diary.name %></td>
                            <td><%= diary.address %></td>
                            <td><%= diary.phone %></td>
                            <td><%= diary.week %></td>
                            <td><%= diary.start_time.strftime("%H:%M") %></td>
                            <td><%= diary.end_time.strftime("%H:%M") %></td>
                            <td width="3%">
                                <%= link_to edit_backoffice_diary_path(diary.id), class: "btn btn-primary btn-circle" do %>
                                    <i class="fa fa-edit"></i>
                                <% end %>
                            </td>
                            <td width="3%">
                                <%= link_to backoffice_diary_path(diary.id), class: "btn btn-danger btn-circle", data: {confirm: "Você realmente deseja excluir (#{diary.name})?"}, method: :delete do  %>
                                    <i class="fa fa-trash"></i>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
        </p> <center><%= paginate @diaries %></center>
    </div>
    <!-- /.panel-body -->
</div>

