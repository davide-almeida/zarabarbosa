<h1 class="page-header">Testes - Lista de Emails</h1>
<% if @test_email.errors.any? %>
<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <!-- message -->
    <ul>
        <% @test_email.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>

</div>
<% end %>
<div class="panel panel-default">
    <div class="panel-heading">
        Editar email
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="col-lg-12 col-xs-12">
            <%= form_for([:backoffice, @test_email]) do |f| %>
                <div class="form-group col-lg-6 col-xs-12">
                    <label>Email</label>
                    <%= f.text_field :email, class:"form-control", placeholder:"Título do teste", required:"required" %>
                </div>
                <div class="form-group col-lg-3 col-xs-12">
                    <label>Teste</label>
                    <%= f.collection_select(:psi_test_id, @test_email_options_for_select, :id, :title, {}, {:class =>"form-control"}) %>
                </div>
                <div class="form-group col-lg-3 col-xs-12">
                    <label>Inscrito/Cancelado</label>
                    <%= f.select(:subscription, @subscription_options_for_select, {}, {:class =>"form-control", :tabindex => "-1"}) %>
                </div>
                <div class="form-group col-lg-12 col-xs-12">
                    <button type="submit" class="btn btn-default">Cadastrar</button>
                </div>
            <% end %>
        </div>
    </div>
    <!-- /.panel-body -->
</div>
<!-- /panel panel-default -->
