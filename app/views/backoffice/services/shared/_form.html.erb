<h1 class="page-header">Serviços Oferecidos</h1>
<% if @service.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <!-- message -->
    <ul>
      <% @service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

  </div>
<% end %>
<div class="panel panel-default" >
    <div class="panel-heading">
        <%= action %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="col-lg-6">
            <%= form_for([:backoffice, @service]) do |f| %>
            <div class="form-group">
                <label>Título</label>
                <%= f.text_field :title, class:"form-control", placeholder:"Nome do Serviço" %>
            </div>
            <div class="form-group">
                <label>Descrição</label>
                <%= f.text_area :description, class:"form-control tinymce", placeholder:"Descrição do Serviço" %>
            </div>
            <div class="form-group">
                <label>Imagem (270px X 248px)</label>
                <%= f.file_field :picture, class:"form-control", placeholder:"Imagem" %>
            </div>
            <button type="submit" class="btn btn-default">Cadastrar</button>
            <% end %>
        </div>
    </div>
    <!-- /.panel-body -->
</div>
<!-- /panel panel-default -->
