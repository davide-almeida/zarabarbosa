<h1 class="page-header">Serviços Oferecidos</h1>
<div class="panel panel-default" >
    <div class="panel-heading">
        Listando Serviços Oferecidos <span class="badge badge-light"><%= @contador.count %></span>
        <%= link_to new_backoffice_service_path, class: "btn btn-success pull-right", style: "margin-top: -5px" do %>
            Novo Cadastro
        <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Título</th>
                        <th>Descrição</th>
                        <th>Imagem</th>
                        <th colspan="2">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    <% @services.each do |service| %>
                        <tr>
                            <td width="3%"><%= service.id %></td>
                            <td><%= service.title %></td>
                            <td><%= service.description.html_safe %></td>
                            <td><%= image_tag service.picture.url(:thumb) %></td>
                            <td width="3%">
                                <%= link_to edit_backoffice_service_path(service.id), class: "btn btn-primary btn-circle" do %>
                                    <i class="fa fa-edit"></i>
                                <% end %>
                            </td>
                            <td width="3%">
                                <%= link_to backoffice_service_path(service.id), class: "btn btn-danger btn-circle", data: {confirm: "Você realmente deseja excluir (#{service.title})?"}, method: :delete do  %>
                                    <i class="fa fa-trash"></i>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
        </p> <center><%= paginate @services %></center>
    </div>
    <!-- /.panel-body -->
</div>

