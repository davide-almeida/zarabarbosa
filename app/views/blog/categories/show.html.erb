                        <div class="emptySpace-xs30"></div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-9">
                    <div class="mainBlogContent">
                        <!-- 	Blog1-START 	-->

                        <% if @posts.blank? %>
                            <p>Sem posts.</p>
                        <% else %>
                          <% @posts.each do |post| %>
                            <div class="blogWrapper">
                                <p class="imgWrapper blogThumbnail">
                                    <%= image_tag post.picture.url(:large) %>
                                    <span class="timeBlock"><%= l(post.post_date) %></span>
                                </p>
                                <div class="blogInfo">
                                    <p><i class="fa fa-user"></i> Por: <%= post.admin.name %></p>
                                    <p><i class="fa fa-tag"></i> <%= post.category.name %></p>
                                    <!--<p><i class="fa fa-comments-o"></i> comments: <span>5</span></p>-->
                                </div>
                                <div class="blogContent">
                                    <h5 class="h5 as"><%= post.title %></h5>
                                    <div class="simple-article normall">
                                        <p><%= post.body.html_safe %></p>
                                    </div>
                                </div>
                                <!--<a href="blog-details.html" class="button">Read more</a>-->
                            </div>
                            <!-- 	Blog1-END 	-->
                            <div class="emptySpace80 emptySpace-xs30"></div>
                            <div class="emptySpace80 emptySpace-xs30"></div>
                          <% end %>
