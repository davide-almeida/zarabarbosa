                        <!-- 	Category-START 	-->
                        <div class="recentTitle">
                            <h5 class="h5 as">Categoriass</h5>
                        </div>
                        <ul class="categoriesList normall">
                          <% if @categories_menu.blank? %>
                            <li> Sem categorias <i class="fa fa-angle-right"></i></li>
                          <% else %>
                            <% @categories_menu.each do |category| %>
                                <% if !category.posts.blank? %>
                                    <li><%= link_to blog_category_path(category.id) do %><%= category.name %> <i class="fa fa-angle-right"></i><% end %></li>
                                <% end %>
                            <% end %>
                          <% end %>
                        </ul>
                        
                        <!-- 	Category-END 	-->
                        
                        
                        
                        <!-- 	Recent news-START-->
                        <div class="emptySpace30 emptySpace-xs10"></div>
                        <!-- 	Tags-START 	-->
                        <!--
                        <div class="recentTitle">
                            <h5 class="h5 as">TAGES</h5>
                        </div>
                        <a href="#" class="tags small">Treatment</a>
                        <a href="#" class="tags small">Depression</a>
                        <a href="#" class="tags small active">Stress</a>
                        <a href="#" class="tags small">Kids Problems</a>
